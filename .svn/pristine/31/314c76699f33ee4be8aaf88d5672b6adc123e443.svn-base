    public static String getSafeStringXSS(String s){ 
		    if (s == null || "".equals(s)) {   
		        return s;   
		    }   
		    StringBuilder sb = new StringBuilder(s.length() + 16);   
		    for (int i = 0; i < s.length(); i++) {   
		        char c = s.charAt(i);   
		        switch (c) {   
		        case '<':   
		            sb.append("《");   
		            break;  
		        case '>':   
		            sb.append("》");   
		            break;   
		        case '\'':   
		            sb.append("‘");// &acute;");   
		            break;   
		        case '\"':   
		            sb.append("“");   
		            break;   
		       /* case ',':   
		            sb.append("，");   
		            break;*/
		        /*case '&':   
		            sb.append("&#38;");   
		            break;   
		        case '#':   
		            sb.append("&#35;");   
		            break;  */ 
		        case '\\':   
		            sb.append("「");   
		            break;  
		       /* case '=':   
		            sb.append("&#61;");   
		            break; */
		        default:   
		            sb.append(c);   
		            break;   
		        }   
		    }   
		    return sb.toString().trim();  
		}
                

class AreaNameTagLib {
	def areaName = { attrs ->
        if(!attrs.area_id || attrs.area_id.length() <=4){
            out << "ä¸­å›½"
        }else{
            String str = ""
            String area_id = attrs.area_id
            while(area_id.length()>4){
                def area = SysInitParams.getAreaMap().get(area_id)
                str =  area.name+"-"+str
                area_id = area.pId
            }
            out << str
        }
    }
}

